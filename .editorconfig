# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[{*.yaml,*.yml}]
indent_size = 2

[*.js]
indent_size = 2

[*.svelte]
indent_size = 2

[*.go]
indent_style = tab

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
